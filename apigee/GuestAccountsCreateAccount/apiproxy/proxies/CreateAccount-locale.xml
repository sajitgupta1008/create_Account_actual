<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="CreateAccount-locale">
  <Description/>
  <FaultRules/>
  <PreFlow name="PreFlow">
    <Request>
      <Step>
        <Name>FlowCallout.SetUriPathValuesIntoHeaders</Name>
      </Step>
    </Request>
    <Response/>
  </PreFlow>
  <PostFlow name="PostFlow">
    <Request/>
    <Response/>
  </PostFlow>
  <Flows>
    <Flow name="OptionsPreFlight">
      <Request/>
      <Response>
        <Step>
          <Name>FlowCallout.AddCORSHeaders</Name>
        </Step>
      </Response>
      <Condition>request.verb == "OPTIONS"</Condition>
    </Flow>
    <Flow name="CreateAccount-locale">
      <Description/>
      <Request/>
      <Response/>
      <Condition>(proxy.pathsuffix MatchesPath "/*/*/*/v1") and (request.verb = "POST")</Condition>
    </Flow>
  </Flows>
  <HTTPProxyConnection>
    <BasePath>/*/*/*/v1/guestAccounts/</BasePath>
    <Properties/>
    <VirtualHost>default</VirtualHost>
  </HTTPProxyConnection>
  <!-- The OPTIONS request for CORS is routed to a null target so that it immediately
  returns with the requested information. -->
  <RouteRule name="NoRoute">
    <Condition>request.verb == "OPTIONS"</Condition>
  </RouteRule>
  <RouteRule name="default">
    <TargetEndpoint>default</TargetEndpoint>
  </RouteRule>
</ProxyEndpoint>